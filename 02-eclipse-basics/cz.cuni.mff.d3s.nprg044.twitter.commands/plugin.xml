<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Twitter category"
            id="cz.cuni.mff.d3s.nprg044.twitter.commands.category"
            name="Twitter commands">
      </category>
      <command
            categoryId="cz.cuni.mff.d3s.nprg044.twitter.commands.category"
            description="Show a given user status"
            id="cz.cuni.mff.d3s.nprg044.twitter.commands.command.showUserStatus"
            name="Show user status">
      </command>
      <command
            categoryId="cz.cuni.mff.d3s.nprg044.twitter.commands.category"
            id="cz.cuni.mff.d3s.nprg044.twitter.commands.CreateNewMessage"
            name="Create new message">
      </command>
      <command
            categoryId="cz.cuni.mff.d3s.nprg044.twitter.commands.category"
            description="Login into Twitter"
            id="cz.cuni.mff.d3s.nprg044.twitter.commands.Login"
            name="Login">
      </command>
      <command
            categoryId="cz.cuni.mff.d3s.nprg044.twitter.commands.category"
            description="Logout the user."
            id="cz.cuni.mff.d3s.nprg044.twitter.commands.Logout"
            name="Logout">
      </command>
      <command
            categoryId="cz.cuni.mff.d3s.nprg044.twitter.commands.category"
            id="cz.cuni.mff.d3s.nprg044.twitter.commands.About"
            name="About">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="cz.cuni.mff.d3s.nprg044.twitter.commands.handlers.ShowUserStatusHandler"
            commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.command.showUserStatus">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.command.showUserStatus"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
      <key
            commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.command.showUserStatus"
            contextId="org.eclipse.ui.console.ConsoleView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="cz.cuni.mff.d3s.nprg044.twitter.commands.menus.twitterMenu"
               label="Twitter"
               mnemonic="T">
            <separator
                  name="beginning"
                  visible="false">
            </separator>
            <separator
                  name="management"
                  visible="false">
            </separator>
            <command
                  commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.command.showUserStatus"
                  id="cz.cuni.mff.d3s.nprg044.twitter.commands.menus.twitterMenu.showUserStatusmmand"
                  mnemonic="S">
            </command>
            <separator
                  name="timeline"
                  visible="true">
            </separator>
            <separator
                  name="usermanagement"
                  visible="true">
            </separator>
         </menu>
         <separator
               name="cz.cuni.mff.d3s.nprg044.twitter.commands.separator1"
               visible="false">
         </separator>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="cz.cuni.mff.d3s.nprg044.twitter.commands.toolbars.twitterToolbar">
            <command
                  commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.command.showUserStatus"
                  icon="icons/twitter.gif"
                  id="cz.cuni.mff.d3s.nprg044.twitter.commands.toolbars.showUserStatus"
                  tooltip="Show user status">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:cz.cuni.mff.d3s.nprg044.twitter.commands.menus.twitterMenu?after=userManagement">
         <menu
               id="cz.cuni.mff.d3s.nprg044.twitter.commands.menus.twitterMenu.userMenu"
               label="User"
               mnemonic="U"
               tooltip="User management">
            <separator
                  name="login"
                  visible="false">
            </separator>
            <separator
                  name="logout"
                  visible="true">
            </separator>
            <command
                  commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.About"
                  label="About T4Eclipse"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:cz.cuni.mff.d3s.nprg044.twitter.commands.menus.twitterMenu?after=timeline">
         <menu
               id="cz.cuni.mff.d3s.nprg044.twitter.commands.menus.twitterMenu.timelineMenu"
               label="Timeline"
               tooltip="T">
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:help?after=additions">
         <command
               commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.About"
               label="About T4Eclipse"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="cz.cuni.mff.d3s.nprg044.twitter.commands.About"
               label="About T4Eclipse"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
